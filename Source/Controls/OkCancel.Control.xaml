<UserControl x:Class="SharpLib.OkCancelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="80" />
            <Setter Property="Height" Value="25" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <StackPanel Name="PART_stackPanel" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="ОК" Name="PART_buttonOk" Margin="0 10 10 10" Click="Ok_Click" />
            <Button Content="Отмена" Name="PART_buttonCancel" Margin="10 10 0 10" Click="Cancel_Click" IsCancel="True" />
        </StackPanel>
    </Grid>
</UserControl>