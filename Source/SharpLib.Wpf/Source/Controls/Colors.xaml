    <!--Общие кисти-->
    <SolidColorBrush x:Key="BrushWhite" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="BrushBlack" Color="#FF000000"/>
    <SolidColorBrush x:Key="BrushControlBackground" Color="#FFDDDDDD"/>
    <SolidColorBrush x:Key="BrushControlDisabled" Color="#FFADB2B5"/>
    <SolidColorBrush x:Key="BrushControlBorder" Color="#FF707070"/>
    <SolidColorBrush x:Key="BrushControlSelected" Color="#FF2C628B"/>
    
    <SolidColorBrush x:Key="BrushMouseOverBackground" Color="#FFBEE6FD"/>
    <SolidColorBrush x:Key="BrushMouseOverBorder" Color="#FF3C7FB1"/>
    <SolidColorBrush x:Key="BrushPressedBackground" Color="#FFC4E5F6"/>
    <SolidColorBrush x:Key="BrushPressedBorder" Color="#FF2C628B"/>
    <SolidColorBrush x:Key="BrushDisabledBackground" Color="#FFF4F4F4"/>
    <SolidColorBrush x:Key="BrushDisabledBorder" Color="#FFADB2B5"/>
    <SolidColorBrush x:Key="BrushDisabledForeground" Color="#FF838383"/>

