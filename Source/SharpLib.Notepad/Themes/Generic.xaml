<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:editing="clr-namespace:SharpLib.Notepad.Editing">
    
	<ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/SharpLib.Nodepad;component/Source/TextEditor.xaml" />
        <ResourceDictionary Source="/SharpLib.Nodepad;component/Source/Search/DropDownButton.xaml" />
        <ResourceDictionary Source="/SharpLib.Nodepad;component/Source/Search/SearchPanel.xaml" />
        <ResourceDictionary Source="/SharpLib.Nodepad;component/Source/CodeCompletion/CompletionList.xaml" />
        <ResourceDictionary Source="/SharpLib.Nodepad;component/Source/CodeCompletion/InsightWindow.xaml" />
    </ResourceDictionary.MergedDictionaries>
	
	<Style TargetType="{x:Type editing:LineNumberMargin}">
        <Setter Property="Cursor" Value="/SharpLib.Nodepad;component/Source/Assets/RightArrow.cur"/>
	</Style>
</ResourceDictionary>
